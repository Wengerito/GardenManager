@model GardenManager.Models.t_tache

@{
    ViewBag.Title = "Edit";
}

<h2>Modification</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Remplissez les champs pour modifier la tâche</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.tacId)

    <div class="form-group">
        <label class="control-label col-md-2">Nom</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.tacName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.tacName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Description</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.tacDetails, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.tacDetails, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Enregistrer" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Retour", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
